# Anuj Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
BOT_USERNAME=anuj_assistant_bot

# OpenAI Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Database Configuration
DATABASE_PATH=database/anuj_bot.db

# File Storage Configuration
FILES_DIR=files/
MAX_FILE_SIZE=50  # in MB

# Channel Configuration (Optional)
FILE_STORAGE_CHANNEL_ID=
ADMIN_USER_IDS=123456789,987654321  # Comma separated user IDs

# Quiz Configuration
MAX_QUIZ_QUESTIONS=10
QUIZ_TIME_LIMIT=300  # 5 minutes in seconds

# Memory Configuration
MAX_HISTORY_MESSAGES=100
CONTEXT_WINDOW_SIZE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/anuj_bot.log

# Webhook Configuration (for Render deployment)
WEBHOOK_URL=https://your-app-name.onrender.com

# Development/Production Mode
ENVIRONMENT=development  # or production

